{
  "name": "cra-with-jest-and-cypress",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "npm run test:jest:run; npm run test:cy:run",
    "test:jest": "npm run test:jest:run",
    "test:jest:run": "react-scripts test",
    "test:jest:watch": "react-scripts test -- --watch",
    "test:cy": "npm run test:cy:run",
    "test:cy:run": "cross-env NODE_ENV=test cypress run-ct",
    "test:cy:coverage": "cross-env NODE_ENV=test cypress run-ct --env coverage=true",
    "test:cy:watch": "cross-env NODE_ENV=test cypress open-ct --browser electron",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.14.5",
    "@cypress/code-coverage": "^3.9.6",
    "@cypress/react": "^5.9.2",
    "@cypress/webpack-dev-server": "^1.4.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.2",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "cross-env": "^7.0.3",
    "cypress": "^8.0.0",
    "local-cypress": "^1.2.2"
  }
}
